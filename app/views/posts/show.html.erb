<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>body:</strong>
  <%= @post.body %>
</p>
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
 
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  
  <p>
    <strong>Commenter:</strong>
    <% if  User.find(comment.user_id).firstname.nil? %>
    Anonymous
  <% else %>
    <%= User.find(comment.user_id).firstname %>
  <% end %>
 
  </p>
  <p>
 
<% end %>

<h2>Add a comment:</h2>

<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
